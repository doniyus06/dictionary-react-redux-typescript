{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "scripthost"
    ],
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./typings/**/*.d.ts",
    "./typings/index.d.ts",
    "!./node_modules/**/*"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
